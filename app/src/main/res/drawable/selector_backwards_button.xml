<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="14dp"/>

                    <solid
                        android:color="#590000" />

                </shape>
            </item>
            <item android:top="10px">
                <shape  android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="10dp"/>

                    <solid
                        android:color="#FFFFFF" />

                    <stroke
                        android:width="3dp"
                        android:color="#9F0000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape  android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="14dp"/>

                    <solid
                        android:color="#590000" />

                </shape>
            </item>
            <item android:bottom="10px">
                <shape  android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="10dp"/>

                    <solid
                        android:color="#FFFFFF" />

                    <stroke
                        android:width="3dp"
                        android:color="#9F0000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>