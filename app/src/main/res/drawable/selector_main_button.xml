<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="10px" android:right="10px">
                <shape  android:shape="rectangle" >
                    <corners
                        android:topRightRadius="14dp"
                        android:bottomRightRadius="5dp"
                        android:bottomLeftRadius="14dp"
                        android:topLeftRadius="5dp"/>

                    <solid
                        android:color="#590000" />

                </shape>
            </item>
            <item android:top="10px" android:right="10px">
                <shape  android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="10dp"
                        android:topRightRadius="10dp"/>

                    <solid
                        android:color="#FFFFFF" />

                    <stroke
                        android:width="3dp"
                        android:color="#9F0000" />

                    <padding
                        android:left="50dp"
                        android:right="50dp"
                        android:top="20dp"
                        android:bottom="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape  android:shape="rectangle" >
                    <corners
                        android:topRightRadius="14dp"
                        android:bottomRightRadius="5dp"
                        android:bottomLeftRadius="14dp"
                        android:topLeftRadius="5dp"/>

                    <solid
                        android:color="#590000" />

                </shape>
            </item>
            <item android:bottom="10px" android:left="10px">
                <shape  android:shape="rectangle" >
                    <corners
                        android:radius="0dp"
                        android:bottomLeftRadius="10dp"
                        android:topRightRadius="10dp"/>

                    <solid
                        android:color="#FFFFFF" />

                    <stroke
                        android:width="3dp"
                        android:color="#9F0000" />

                    <padding
                        android:left="50dp"
                        android:right="50dp"
                        android:top="20dp"
                        android:bottom="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>