<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#acacac"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:id="@+id/btnRecentRecalls"
                android:background="@drawable/selector_main_button"
                android:text="@string/title_activity_view_recent_recalls"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnRecentRecalls"
                android:layout_alignRight="@id/btnRecentRecalls"
                android:layout_alignEnd="@id/btnRecentRecalls"
                android:layout_alignLeft="@id/btnRecentRecalls"
                android:layout_alignStart="@id/btnRecentRecalls"
                android:id="@+id/btnSearchRecalls"
                android:background="@drawable/selector_main_button"
                android:text="@string/title_activity_search_recalls"
            />

    </RelativeLayout>

</RelativeLayout>
